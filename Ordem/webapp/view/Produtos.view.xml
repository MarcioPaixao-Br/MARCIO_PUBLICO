<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="br.com.ordem.Ordem.controller.Produtos">
	<App>
		<pages>
			<Page title="Produtos da ordem">
				<content>
					<IconTabBar selectedKey="__filter0" id="bar0">
						<items>
							<IconTabFilter text="Itens da ordem" showAll="true" id="filter0" icon="sap-icon://sales-order-item">
							<content>
							    <Table noDataText="Drop column list items here and columns in the area above" items="{/Order_Details}" id="table0">
										<items>
											<ColumnListItem type="Active" id="item0" press="OnProdInfo">
												<cells>
													<Text text="{ProductID}" id="text0"/>
													<Text text="{UnitPrice}" id="text1"/>
													<Text text="{Quantity}" id="text2"/>
													<Text text="{Discount}" id="text3"/>
												</cells>
											</ColumnListItem>
										</items>
										<columns>
											<Column id="column0">
												<header>
													<Label text="Produto" id="label0"/>
												</header>
											</Column>
											<Column id="column1">
												<header>
													<Label text="Valor" id="label1"/>
												</header>
											</Column>
											<Column id="column2">
												<header>
													<Label text="Quantidade" id="label2"/>
												</header>
											</Column>
											<Column id="column3">
												<header>
													<Label text="Desconto" id="label3"/>
												</header>
											</Column>
										</columns></Table>
							</content>
							</IconTabFilter>							
							<IconTabFilter text="Produtos" icon="sap-icon://product" iconColor="Critical" id="filter1"/>
							<IconTabFilter text="Supplier" icon="sap-icon://supplier" iconColor="Positive" id="filter2"/>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>